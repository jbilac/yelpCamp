<%-layout('layout/start') %>
<form class="form-control w-25 mx-auto" action="/register" method="post">
  <h2>Sign up</h2>
  <label for="username">Username</label>
  <input class="form-control" type="text" name="user[username]" id="username">
  <label for="password">Password</label>
  <input class="form-control" type="password" name="user[password]" id="password">
  <button type="submit" class="btn btn-success mt-2" name="button">Sign Up</button>
  <button type="button" class="btn btn-primary mt-2"><a href="/login" class="text-decoration-none text-white">Login</a></button>
</form>
