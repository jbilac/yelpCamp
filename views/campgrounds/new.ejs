<%- layout('layout/boilerplate') %>
<div class="container">
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-12 col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image-url">Image Url</label>
                <input class="form-control" type="text" id="image-url" name="campground[image]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" type="number" id="number" name="campground[price]" min="0" aria-label="Amount (to the nearest dollar)" placeholder="0.00" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" cols="30" rows="10" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
            <div class="mb-3">
                <a href="/campgrounds">back to campgrounds</a>
            </div>
        </form>
    </div>
    
</div>
</div>